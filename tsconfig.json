{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es6"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
